// GET /quizes/question
exports.question = function(req, res, next) {
   res.render('quizes/question', {question: 'Capital de Italia'});
};

// GET /quizes/result
exports.result = function(req, res, next) {
	var result = ((req.query.result === 'Roma') ? 'Correcta' : 'Incorrecta');
	res.render('../result', {result: result});
};
